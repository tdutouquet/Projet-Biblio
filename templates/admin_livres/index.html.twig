{% extends 'base.html.twig' %}

{% block title %}Livres index{% endblock %}

{% block body %}
    <h1>Livres index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>AnneePublication</th>
                <th>MaisonEdition</th>
                <th>Resume</th>
                <th>Image</th>
                <th>Categorie</th>
                <th>Disponibilite</th>
                <th>Note</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.id }}</td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.auteur }}</td>
                <td>{{ livre.anneePublication }}</td>
                <td>{{ livre.maisonEdition }}</td>
                <td>{{ livre.resume }}</td>
                <td>{{ livre.image }}</td>
                <td>{{ livre.categorie }}</td>
                <td>{{ livre.disponibilite ? 'Yes' : 'No' }}</td>
                <td>{{ livre.note }}</td>
                <td>
                    <a href="{{ path('app_admin_livres_show', {'id': livre.id}) }}">show</a>
                    <a href="{{ path('app_admin_livres_edit', {'id': livre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_livres_new') }}">Create new</a>
{% endblock %}
