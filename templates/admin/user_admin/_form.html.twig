
{{ form_start(userForm) }}
    <h4 class="my-4">Informations personnelles</h4>
    {{ form_row(userForm.firstname, {'label': 'Prénom'}) }}
    {{ form_row(userForm.lastname, {'label': 'Nom'}) }}
    {{ form_row(userForm.email, {'label': 'Email'}) }}
    {# {{ form_row(userForm.password, {'label': 'Mot de passe' }) }} #}
    {{ form_row(userForm.address, {'label': 'Adresse'}) }}
    {{ form_row(userForm.city, {'label': 'Ville'}) }}
    {{ form_row(userForm.zipcode, {'label': 'Code postal'}) }}
    {{ form_row(userForm.phone, {'label': 'Téléphone'}) }}
    {{ form_row(userForm.birthdate, {'label': 'Date de naissance'}) }}
