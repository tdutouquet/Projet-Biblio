    <h4 class="my-4">Gestion des permissions</h4>
    <div class="container">
        <div class="row">
            <div class="col">{{ form_row(userForm.roles, {'label': 'Rôle'}) }}</div>
            <div class="col">{{ form_row(userForm.is_banned, {'label': 'Bannir'}) }}</div>
        </div>
    </div>
