<div class="container-fluid p-0">
	<div class="jumbotron jumbotron-fluid d-flex align-items-center text-center text-white bg-dark p-5 vh-50" style="background-image: linear-gradient(rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0.5)),url('https://source.unsplash.com/random/?books'); background-size: cover; background-position: center;">
		<div class="container">
			<h1 class="display-4">{% trans %} Bienvenue {% endtrans %}</h1>
			<p class="lead">{% trans %} Un simple abonnement pour toute la connaissance ! {% endtrans %}</p>
			{% if app.user %}
				<a href="{{ path('app_subscription') }}" class="btn btn-primary btn-lg p-3 mt-3">{% trans %} Je m'abonne {% endtrans %}</a>
			{% else %}
				<a href="{{ path('app_register') }}" class="btn btn-primary btn-lg p-3 mt-3">{% trans %} Je m'inscris {% endtrans %}</a>
			{% endif %}
		</div>
	</div>
</div>
